---
interface Props {
  mode?: 'signin' | 'signup';
}

const { mode = 'signin' } = Astro.props;
---

<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-serif font-bold text-[#3A2E27] mb-6 text-center">
    {mode === 'signin' ? 'Iniciar Sesión' : 'Registrarse'}
  </h2>
  
  <form id="authForm" class="space-y-4">
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
        Correo Electrónico
      </label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#A67C52]"
        required
      />
    </div>

    <div>
      <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
        Contraseña
      </label>
      <input
        type="password"
        id="password"
        name="password"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#A67C52]"
        required
      />
    </div>

    <div id="error" class="text-red-600 text-sm hidden"></div>

    <button
      type="submit"
      class="w-full py-2 px-4 bg-[#A67C52] text-white rounded-md hover:bg-[#8C5E3B] transition-colors disabled:opacity-50"
    >
      {mode === 'signin' ? 'Iniciar Sesión' : 'Registrarse'}
    </button>
  </form>
</div>

<script>
  import { signIn, signUp } from '../lib/auth';

  const form = document.getElementById('authForm');
  const errorDiv = document.getElementById('error');
  const mode = document.querySelector('h2')?.textContent?.includes('Iniciar') ? 'signin' : 'signup';

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    try {
      const { error } = mode === 'signin' 
        ? await signIn(email, password)
        : await signUp(email, password);

      if (error) throw error;

      // Redirigir según el rol del usuario
      window.location.href = mode === 'signin' ? '/admin' : '/';
    } catch (err) {
      if (errorDiv) {
        errorDiv.textContent = err.message;
        errorDiv.classList.remove('hidden');
      }
    }
  });
</script>