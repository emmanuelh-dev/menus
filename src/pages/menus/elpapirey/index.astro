const restaurantData = {
  name: "El Papi Rey",
  description: "Hamburguesas, Hot Dogs y Antojitos Mexicanos",
};

const schemaEnrichment = {
  address: {
    streetAddress: "Calzada Union #231",
    addressLocality: "San Nicol√°s de los Garza",
    addressRegion: "N.L.",
    postalCode: "66473",
    addressCountry: "MX",
  },
  telephone: "+52 81 3390 6548",
  priceRange: "$",
  servesCuisine: [
    "Hamburguesas",
